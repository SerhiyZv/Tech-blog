<div class="row px-2 px-sm-5 justify-content-center">
    <div class="col-12 col-md-10">
        <div class="my-3 card shadow-sm rounded">
            <div class="card-header bg-secondary text-white d-flex">
                {{#if existingPost}}
                <h2 class="card-title">Edit/Delete Post</h2>
                {{else}}
                <h2 class="card-title">New Post</h2>
                {{/if}} 
            </div>
            {{#if existingPost}}
            <form id="post-form" class="p-3" data-post_id="{{id}}">
            {{else}}
            <form id="post-form" class="p-3">
            {{/if}} 
                <div class="form-group">
                    <label for="titlearea">Title</label>
                    <input type="text" class="form-control" id="titlearea" value="{{title}}" required>
                </div>
                <div class="form-group">
                    <label for="textarea">Text</label>
                    <textarea form="post-form" rows="3" class="form-control" id="textarea" required>{{text}}</textarea>
                </div>
            </form>
            <div class="d-flex flex-column align-items-center">
                {{#if existingPost}}
                <button class="btn btn-secondary w-50" id="update">Update Post</button>
                <button class="btn btn-danger w-50 my-3" id="delete">Delete Post</button>
                {{else}}
                <button class="btn btn-primary w-50 mb-3" id="publish">Publish Post</button>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<script src="/js/edit.js"></script>
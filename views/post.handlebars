<div class="row px-5 justify-content-center">
    <div class="col-10">
        <div class="my-3 card shadow-sm rounded" data-post_id="{{id}}">
            <div class="card-header bg-success text-white d-flex justify-content-between">
                <h2 class="card-title">{{title}}</h2> 
                <h4>{{user.name}}</h3>
            </div>
            <div class="card-body bg-light p-3">
                <p><strong>{{{formatDate post_date}}}</strong></p>
                <p>{{text}}</p>
            </div>
        </div>
    </div>
</div>

<div class="row px-5 justify-content-center mt-2">
    <div class="col-10">
        <h3 class="w-100">Comments</h3>
    </div>
</div>

{{#each comments as |comment|}}
{{> comment-summaries}}
{{/each}}

<div class="row px-5 justify-content-center">
    <div class="col-10">
        <button class="btn btn-dark w-50 mt-3" id="new-comment"><h5>+ New Comment</h5></button>
    </div>
</div>
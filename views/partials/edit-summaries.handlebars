<div class="row px-5 justify-content-center">
    <div class="col-10">
        <a href="/dashboard/edit/{{id}}" target="_blank" class="post-link">
        <div class="my-3 card shadow-sm rounded" data-post_id="{{id}}">
            <div class="card-header bg-success text-white d-flex justify-content-between">
                <h2 class="card-title">{{title}}</h2> 
            </div>
            <div class="card-body bg-light p-3">
                <p><strong>{{{formatDate post_date}}}</strong></p>
                <p>{{text}}</p>
            </div>
        </div>
        </a>
    </div>
</div>